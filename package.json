{
  "name": "CPPS-Launcher",
  "version": "1.2.0",
  "description": "Lightweight Club Penguin (CPPS) Launcher",
  "author": "Dragon9135",
  "main": "main.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dragon9135/CPPS-Launcher.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "dependencies": {
    "discord-rpc": "4.0.1",
    "electron-prompt": "^1.7.0"
  },
  "devDependencies": {
    "electron": "11.5.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.lightweight.cppslauncher",
    "productName": "CPPS Launcher",
    "files": [
      "main.js",
      "index.html",
      "preload.js",
      "package.json",
      "icon.ico",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "./plugins/",
        "to": "plugins/"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    }
  }
}
